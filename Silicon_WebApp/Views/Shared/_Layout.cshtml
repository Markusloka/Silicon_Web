<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Silicon</title>
    <link rel="stylesheet" href="https://kit.fontawesome.com/686402c9d7.css" crossorigin="anonymous" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Silicon_WebApp.styles.css" asp-append-version="true" />
</head>
<body>
<div class="wrapper">
    @await Html.PartialAsync("/Views/Shared/Sections/_HeaderPartial.cshtml")
