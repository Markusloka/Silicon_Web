@model SignInViewModel
@{
    ViewData["Title"] = "Sign In";
}

<section class="signin">
    <div class="container">
        <form method="post" asp-controller="Auth" asp-action="SignIn" asp-route-ReturnUrl="@ViewData["ReturnUrl"]" novalidate>
            <div>
                @if (!string.IsNullOrEmpty(ViewData["StatusMessage"]?.ToString()))
                @ViewData["StatusMessage"]
            </div>
            <h1> Welcome back</h1>
            <p>Don't have an account? <a asp-controller="Auth" asp-action="SignUp">Sign up here</a>.</p>
            <div class="content">
                <div id="form-email" class="input-group">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" />
                </div>
                <div id="form-password" class="input-group">
                    <label asp-for="Password"></label>
                    <input asp-for="Password" />
                </div>
               
                <div id="form-remember" class="checkbox-group">
                    <div class="input-group">
                        <input asp-for="IsPresistent" />
                        <label asp-for="IsPresistent"></label>
                    </div>
                </div>
                <button id="form-submit" class="btn-theme-s" type="submit"> Sign In</button>
                <a id="form-forgot-password" asp-controller="Account" asp-action=""> Forgot your password?</a>
            </div>

        </form>
    </div>
</section>