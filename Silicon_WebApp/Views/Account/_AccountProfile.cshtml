@inject UserManager<UserEntity> UserManager
@{
    var user = await UserManager.GetUserAsync(User); 
}

@if (user != null)
{
    <div class="profile">
        <div class="profile-pic">
            <img src="~/images/uploads/profiles/@user.ProfileImage" alt="@user.FirstName @user.LastName" />
        </div>
        <form enctype="multipart/form-data" method="post" asp-action="UploadProfileImage" asp-controller="Account">
        <input id="fileUploader" type="file" name="file" hidden/>    
        <label for="fileUploader" class="btn btn-circle btn-circl-sm"><i class="fa-regular fa-refresh"></i></label>
        </form>
        <div class="profile-info">
            <h5 class="displayname"> @user.FirstName @user.LastName</h5>
            <p>@user.Email</p>
        </div>
    </div>
    <nav>
        <a class="btn-theme-s" asp-controller="Account" asp-action="Details">Account Details</a>
        <a class="btn-transparent" asp-controller="Auth" asp-action="SignOut">Sign out</a>
    </nav>
}