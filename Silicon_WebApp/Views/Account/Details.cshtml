@model AccountDetailsViewModel

@{
    ViewData["Title"] = "Account Details";
}


<section class="account-details">
    <div class="container">

        @if (!string.IsNullOrEmpty(ViewData["StatusMessage"]?.ToString()))
        {
            <div class="alert">
                @ViewData["StatusMessage"]
            </div>
        }

        <div class="details">
            <section class="basic-info">
                <form method="post" asp-action="UpdateBasicInfo" asp-controller="Account" novalidate>
                    <h2>Account Details</h2>
                    <h5>Basic Info</h5>

                    <div class="content">
                        <div id="form-firstname" class="input-group">
                            <label asp-for=Basic!.FirstName></label>
                            <span asp-validation-for="Basic!.FirstName"></span>
                            <input asp-for="Basic!.FirstName" />
                        </div>
                        <div id="form-lastname" class="input-group">
                            <label asp-for=Basic!.LastName></label>
                            <span asp-validation-for="Basic!.LastName"></span>
                            <input asp-for="Basic!.LastName" />
                        </div>
                        <div id="form-email" class="input-group">
                            <label asp-for=Basic!.Email></label>
                            <span asp-validation-for="Basic!.Email"></span>
                            <input asp-for="Basic!.Email" />
                        </div>
                        <div id="form-phone" class="input-group">
                            <label asp-for="Basic!.PhoneNumber"></label>
                            <input asp-for="Basic!.PhoneNumber" />
                        </div>
                        <div id="form-bio" class="input-group">
                            <label asp-for=Basic!.Bio>Bio <span>(optional)</span></label>
                            <textarea asp-for="Basic!.Bio"></textarea>
                        </div>
                        <div class="form-buttons">
                            <button class="btn-gray" type="reset">Cancel</button>
                            <button class="btn-theme" type="submit" asp-controller="Account" asp-action="Details">Save changes</button>
                        </div>
                    </div>
                </form>
            </section>
            <hr />
            <section class="address-info">
                <form method="post" asp-controller="Account" asp-action="UpdateAddressInfo" novalidate>
                    <h5>Address</h5>

                    <div class="content">
                        <div id="form-addressline-1" class="input-group">
                            <label asp-for="Address!.AddressLine_1!">Address line 1</label>
                            <span asp-validation-for="Address.AddressLine_1!"></span>
                            <input asp-for="Address!.AddressLine_1!" />
                        </div>
                        <div id="form-addressline-2" class="input-group">
                            <label asp-for="Address!.AddressLine_2!">Address line 2 <span>(optional)</span></label>
                            <span asp-validation-for="Address!.AddressLine_2!"></span>
                            <input asp-for="Address!.AddressLine_2!" />
                        </div>
                        <div id="form-postalcode" class="input-group">
                            <label asp-for="Address!.PostalCode!"></label>
                            <span asp-validation-for="Address!.PostalCode!"></span>
                            <input asp-for="Address!.PostalCode!" />
                        </div>
                        <div id="form-city" class="input-group">
                            <label asp-for="Address!.City!"></label>
                            <span asp-validation-for="Address!.City!"></span>
                            <input asp-for="Address!.City!" />
                        </div>
                        <div class="form-buttons">
                            <button class="btn-gray" type="reset">Cancel</button>
                            <button class="btn-theme" type="submit" asp-controller="Account" asp-action="Details">Save changes</button>
                        </div>
                    </div>
                </form>
            </section>
        </div>
    </div>
</section>